{
  "name": "@sao-icons/source",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "tmp/local-registry/storage"
      }
    },
    "test:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run-many --all --target=jest-test,vite-test --skip-nx-cache"
          }
        ]
      }
    },
    "lint:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run-many --all --target=lint --skip-nx-cache"
          }
        ]
      }
    },
    "stylelint:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run-many --all --target=stylelint --skip-nx-cache"
          }
        ]
      }
    }
  }
}
