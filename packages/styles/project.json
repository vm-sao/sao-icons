{
  "name": "styles",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/styles",
  "projectType": "library",
  "tags": ["sao-icons", "styles"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf dist/packages/styles",
          "mkdir -p dist/packages/styles",
          "rsync -a --exclude='project.json' --exclude='main.mjs' packages/styles/ dist/packages/styles/",
          "node packages/styles/main.mjs"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd dist/packages/styles && pnpm publish --access public --no-git-checks"
        ],
        "parallel": false
      }
    },
    "auto": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx build styles --parallel=false",
          "pnpm nx publish styles --parallel=false"
        ],
        "parallel": false
      }
    },
    "ci": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx build styles --parallel=false",
          "pnpm nx publish styles --parallel=false --dry-run"
        ],
        "parallel": false
      }
    }
  }
}
